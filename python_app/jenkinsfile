 stage('OWASP ZAP Scan') {

    agent { label 'akhil-security-agent' }

    steps {

        sh '''#!/bin/bash

        # Use Bash explicitly so "pipefail" works

        set -euxo pipefail
 
        TARGET_URL="
        "
 
        echo "ğŸ”„ Waiting for app to start..."

        for i in {1..10}; do

            if curl -s --max-time 5 $TARGET_URL >/dev/null; then

                echo "âœ… App is up!"

                break

            fi

            sleep 5

        done
 
        echo "ğŸš€ Running OWASP ZAP Baseline Scan..."

        # Run ZAP in Docker; ignore exit code (ZAP returns 2 for warnings)

        docker run --rm -v $(pwd):/zap/wrk/:rw \

            --network="host" \

            ghcr.io/zaproxy/zaproxy:stable \

            zap-baseline.py -t $TARGET_URL -r zap_report.html || true
 
        mkdir -p reports

        mv zap_report.html reports/
 
        echo "ğŸ” Checking ZAP results for FAIL-NEW entries..."

        FAIL_COUNT=$(grep -oE "FAIL-NEW: [0-9]+" reports/zap_report.html | awk '{print $2}' || echo 0)
 
        # If grep finds nothing, default to 0

        if [ -z "$FAIL_COUNT" ]; then

            FAIL_COUNT=0

        fi
 
        if [ "$FAIL_COUNT" -gt 0 ]; then

            echo "âŒ ZAP found $FAIL_COUNT high-severity vulnerabilities!"

            exit 1

        else

            echo "âœ… No high-severity vulnerabilities found. Build will continue."

        fi

        '''

    }

    post {

        always {

            archiveArtifacts artifacts: 'reports/zap_report.html', fingerprint: true

        }

        success {

            echo 'âœ… ZAP scan completed successfully â€” only warnings or no issues.'

        }

        failure {

            echo 'âŒ Build failed because high-severity issues were found in ZAP scan.'

        }

    }

}

 
 Â Â  }



 Â Â  post {
 Â Â Â Â Â Â  success {
 Â Â Â Â Â Â Â Â Â Â  echo 'âœ… Pipeline completed and deployed successfully!'
